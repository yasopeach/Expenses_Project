@model IEnumerable<MvcWorkspace.Models.Expense>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expense CAT!!!</h2>
            <h4 class="text-primary">Total @ViewBag.totalAmount</h4>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr class="align-middle text-primary">
                    <th>
                        Expense
                    </th>
                    <th>
                        Amount
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model)
                {
                    <tr class="align-middle">
                        <td width="25%">@expense.ExpenseName</td>
                        <td width="20%">@expense.Amount</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No items created yet</p>
    }

</div>