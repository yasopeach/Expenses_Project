@model IEnumerable<MvcWorkspace.Models.Expense>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expenses</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Expense" asp-action="AddOrUpdate" class="btn btn-primary">Create new Expense</a>
        </div>
    </div>
    <br />

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr class="align-middle text-primary">
                    <th>
                        Expense
                    </th>
                    <th>
                        Amount
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var expense in Model)
                {
                <tr class="align-middle">
                    <td width="25%">@expense.ExpenseName</td>
                    <td width="20%">@expense.Amount</td>
                    <td width="30%" class="">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Expense" asp-action="AddOrUpdate" asp-route-Id="@expense.Id" class="btn btn-outline-primary mx-2">Update</a>
                            <a asp-controller="Expense" asp-action="Delete" asp-route-Id="@expense.Id" class="btn btn-outline-danger mx-2">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table> 
    }
    else
    {
        <p>No items created yet</p>
    }

</div>